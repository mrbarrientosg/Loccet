<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="backgroundWhite" stylesheets="@../css/addmaterial.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="20.0">
         <children>
            <Label styleClass="title2" text="Agregar Material" textAlignment="CENTER">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Label>
            <TextField fx:id="agregarTF" promptText="Cantidad a agregar">
               <styleClass>
                  <String fx:value="textFieldGrey" />
                  <String fx:value="textField" />
               </styleClass>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </VBox.margin>
      </VBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="agregarBT" defaultButton="true" mnemonicParsing="false" onAction="#cantidadItem" styleClass="buttonBlue" text="Agregar" />
            <Button fx:id="cancelarBT" mnemonicParsing="false" onAction="#salir" styleClass="buttonFillBlue" text="Cancelar" />
        </buttons>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
</VBox>
