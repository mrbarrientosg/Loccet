<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="backgroundWhite" stylesheets="@../css/detailproyect.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label styleClass="title1" text="Trabajadores">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
                  <ButtonBar buttonMinWidth="0.0" HBox.hgrow="ALWAYS">
                     <buttons>
                        <Button mnemonicParsing="false" styleClass="buttonBlue" text="Agregar trabajador" />
                        <Button mnemonicParsing="false" onAction="#verDetalleTrabajador" styleClass="buttonFillBlue" text="Ver detalle" />
                     </buttons>
                  </ButtonBar>
               </children>
            </HBox>
            <TextField fx:id="searchTextField" promptText="Buscar trabajador">
               <styleClass>
                  <String fx:value="textField" />
                  <String fx:value="textFieldGrey" />
               </styleClass>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </VBox.margin>
      </VBox>
      <TableView fx:id="tableView" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="rutColumn" editable="false" prefWidth="75.0" style="-fx-alignment: CENTER;" text="RUT" />
            <TableColumn fx:id="nameColumn" editable="false" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Nombre" />
            <TableColumn fx:id="lastNameColumn" editable="false" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Apellido" />
            <TableColumn fx:id="fechaNaciemientoColumn" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Fecha Nacimiento" />
            <TableColumn fx:id="specialityColumn" editable="false" prefWidth="84.0" style="-fx-alignment: CENTER;" text="Especialidad" />
            <TableColumn fx:id="horasTrabajoColumn" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Horas de Trabajo" />
            <TableColumn fx:id="sueldoHoraColumn" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Sueldo por Hora" />
            <TableColumn fx:id="proyectColumn" editable="false" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Proyecto" visible="false" />
            <TableColumn fx:id="telefonoColumn" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Telefono" />
            <TableColumn fx:id="emailColumn" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Correo electronico" />
         </columns>
         <contextMenu>
            <ContextMenu>
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#editTrabajador" text="Editar" />
                  <MenuItem mnemonicParsing="false" onAction="#actualizarTabla" text="Actualizar" />
               </items>
            </ContextMenu>
         </contextMenu>
         <styleClass>
            <String fx:value="rrhh-table" />
            <String fx:value="backgroundgray" />
            <String fx:value="custom-scroll" />
         </styleClass>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
