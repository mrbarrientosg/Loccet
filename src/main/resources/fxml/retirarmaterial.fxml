<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" styleClass="backgroundWhite" stylesheets="@../css/retirematerial.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="10.0">
         <children>
            <Label styleClass="title3" text="Datos del material">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="80.0" />
               </VBox.margin>
            </Label>
            <HBox spacing="30.0">
               <children>
                  <VBox spacing="8.0">
                     <children>
                        <Label styleClass="paragraph" text="ID material" />
                        <Label />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox spacing="8.0">
                     <children>
                        <Label styleClass="paragraph" text="Nombre" />
                        <Label />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox spacing="8.0">
                     <children>
                        <Label styleClass="paragraph" text="Cantidad" />
                        <Label />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <TextField fx:id="retirarTF" promptText="Cantidad a retirar">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <styleClass>
                  <String fx:value="textField" />
                  <String fx:value="textFieldGrey" />
               </styleClass>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="retirarBT" mnemonicParsing="false" onAction="#cantidadItem" styleClass="buttonBlue" text="Retirar" />
            <Button fx:id="cancelarBT" mnemonicParsing="false" onAction="#cancelar" styleClass="buttonFillBlue" text="Cancelar" />
        </buttons>
         <VBox.margin>
            <Insets right="5.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
</VBox>
