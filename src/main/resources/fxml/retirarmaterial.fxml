<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" styleClass="backgroundLight" stylesheets="@../css/retirematerial.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="20.0">
         <children>
            <Label styleClass="title2" text="Retirar Material">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <TextField fx:id="retirarTF" promptText="Cantidad a retirar">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <styleClass>
                  <String fx:value="textField" />
                  <String fx:value="textFieldGrey" />
               </styleClass>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </VBox.margin>
      </VBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0">
               <children>
                  <AnchorPane styleClass="buttonWhiteShadow">
                     <StackPane.margin>
                        <Insets left="5.0" right="5.0" top="10.0" />
                     </StackPane.margin>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </AnchorPane>
                  <Button fx:id="retirarBT" defaultButton="true" mnemonicParsing="false" onAction="#cantidadItem" prefHeight="32.0" prefWidth="71.0" styleClass="buttonBlue" text="Retirar" />
               </children>
            </StackPane>
            <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0">
               <children>
                  <AnchorPane styleClass="buttonWhiteShadow">
                     <StackPane.margin>
                        <Insets left="5.0" right="5.0" top="10.0" />
                     </StackPane.margin>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </AnchorPane>
                  <Button fx:id="cancelarBT" mnemonicParsing="false" onAction="#cancelar" styleClass="buttonFillRed" text="Cancelar" />
               </children>
            </StackPane>
        </buttons>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
</VBox>
