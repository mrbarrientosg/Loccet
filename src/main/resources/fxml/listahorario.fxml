<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="376.0" prefWidth="446.0" styleClass="backgroundWhite" stylesheets="@../css/timetable.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" spacing="8.0">
         <children>
            <Label styleClass="title1" text="Horario">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Separator maxWidth="1.7976931348623157E308" visible="false" HBox.hgrow="ALWAYS" />
            <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0">
               <children>
                  <AnchorPane styleClass="buttonWhiteShadow">
                     <StackPane.margin>
                        <Insets left="5.0" right="5.0" top="10.0" />
                     </StackPane.margin>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </AnchorPane>
                  <Button fx:id="addHorarioButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="buttonBlue" text="Agregar horario" />
               </children>
            </StackPane>
            <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0">
               <children>
                  <AnchorPane styleClass="buttonWhiteShadow">
                     <StackPane.margin>
                        <Insets left="5.0" right="5.0" top="10.0" />
                     </StackPane.margin>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </AnchorPane>
                  <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" styleClass="buttonRed" text="Eliminar" />
               </children>
            </StackPane>
         </children>
         <VBox.margin>
            <Insets left="16.0" right="16.0" top="8.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="tableHorario" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="diaColumn" prefWidth="75.0" text="Dia" />
          <TableColumn fx:id="proyectoColumn" prefWidth="75.0" text="Proyecto" />
            <TableColumn fx:id="entradaColumn" prefWidth="100.0" text="Hora entrada" />
            <TableColumn fx:id="salidaColumn" prefWidth="100.0" text="Hora salida" />
        </columns>
         <styleClass>
            <String fx:value="backgroundgray" />
            <String fx:value="rrhh-table" />
         </styleClass>
         <VBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="8.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
