<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="DÃ­a">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Separator visible="false" HBox.hgrow="ALWAYS" />
            <Label fx:id="nombreTrabajador" text="Nombre Trabajador">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <RadioButton mnemonicParsing="false" selected="true" text="Lunes">
               <toggleGroup>
                  <ToggleGroup fx:id="diasToggle" />
               </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="Martes" toggleGroup="$diasToggle" />
            <RadioButton mnemonicParsing="false" text="Miercoles" toggleGroup="$diasToggle" />
            <RadioButton mnemonicParsing="false" text="Jueves" toggleGroup="$diasToggle" />
            <RadioButton mnemonicParsing="false" text="Viernes" toggleGroup="$diasToggle" />
            <RadioButton mnemonicParsing="false" text="Sabado" toggleGroup="$diasToggle" />
            <RadioButton mnemonicParsing="false" text="Domingo" toggleGroup="$diasToggle" />
         </children>
         <VBox.margin>
            <Insets bottom="3.0" top="3.0" />
         </VBox.margin>
      </HBox>
      <VBox spacing="8.0">
         <children>
            <Label text="Hora entrada">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
                  <Label text="Hora" />
                  <Spinner fx:id="horaEntrada" editable="true" />
                  <Label text="Minuto" />
                  <Spinner fx:id="minutoEntrada" editable="true" />
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label text="Hora salida">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
                  <Label text="Hora" />
                  <Spinner fx:id="horaSalida" editable="true" />
                  <Label text="Minuto" />
                  <Spinner fx:id="minutoSalida" editable="true" />
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button defaultButton="true" mnemonicParsing="false" onAction="#agregarHorario" text="Agregar" />
            <Button mnemonicParsing="false" text="Salir" />
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <Separator prefWidth="200.0" />
      <Label text="Horario">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="horarioArea" editable="false" VBox.vgrow="ALWAYS" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
   </padding>
</VBox>
